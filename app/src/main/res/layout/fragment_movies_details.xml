<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MovieDetailsActivity">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/orig"
        android:scaleType="centerCrop"

        />

    <ImageView
        android:id="@+id/path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/path"
        android:layout_marginTop="59dp"
        android:layout_marginLeft="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_marginTop="56dp"
        android:layout_marginLeft="18dp"
        app:layout_constraintStart_toStartOf="@+id/path"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white">
    </TextView>

    <TextView
        android:layout_width="24dp"
        android:layout_height="16dp"
        android:text="13+"
        android:id="@+id/PG"
        android:layout_marginTop="126dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintStart_toStartOf="@+id/path"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white">
    </TextView>

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Avangers:\nEndGame"
        android:textFontWeight="900"
        android:textSize="40sp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PG"
        android:textColor="@color/white">
    </TextView>

    <TextView
        android:id="@+id/textViewTag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Action, Adventure, Fantasy"
        android:textFontWeight="300"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewName"
        android:textColor="@color/tagColor">
    </TextView>

    <ImageView
        android:id="@+id/StarEnable0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_star_icon"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewTag"
        app:tint="@color/enableStar">
    </ImageView>

    <ImageView
        android:id="@+id/StarEnable1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_star_icon"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="3dp"
        app:layout_constraintStart_toEndOf="@id/StarEnable0"
        app:layout_constraintTop_toBottomOf="@id/textViewTag"
        app:tint="@color/enableStar">
    </ImageView>

    <ImageView
        android:id="@+id/StarEnable2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_star_icon"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="3dp"
        app:layout_constraintStart_toEndOf="@id/StarEnable1"
        app:layout_constraintTop_toBottomOf="@id/textViewTag"
        app:tint="@color/enableStar">
    </ImageView>

    <ImageView
        android:id="@+id/StarEnable3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_star_icon"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="3dp"
        app:layout_constraintStart_toEndOf="@id/StarEnable2"
        app:layout_constraintTop_toBottomOf="@id/textViewTag"
        app:tint="@color/enableStar">
    </ImageView>

    <ImageView
        android:id="@+id/StarDisable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_star_icon"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="3dp"
        app:layout_constraintStart_toEndOf="@id/StarEnable3"
        app:layout_constraintTop_toBottomOf="@id/textViewTag"
        app:tint="@color/disableStar">
    </ImageView>

    <TextView
        android:id="@+id/textViewReview"
        android:layout_width="112dp"
        android:layout_height="20dp"
        android:text="125 REVIEWS"
        android:textFontWeight="900"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="9dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toEndOf="@id/StarDisable"
        app:layout_constraintTop_toBottomOf="@id/textViewTag"
        android:textColor="@color/disableStar">
    </TextView>

    <TextView
        android:id="@+id/textViewStoryline"
        android:layout_width="343dp"
        android:layout_height="20dp"
        android:text="Storyline"
        android:textFontWeight="900"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewReview"
        android:textColor="@color/white">
    </TextView>

    <TextView
        android:id="@+id/textViewDevastating"
        android:layout_width="343dp"
        android:layout_height="100dp"
        android:text="@string/devastating"
        android:textFontWeight="300"
        android:textSize="14sp"
        android:lineHeight="20dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewStoryline"
        android:textColor="@color/devastating">
    </TextView>

    <TextView
        android:id="@+id/textViewCast"
        android:layout_width="243dp"
        android:layout_height="24dp"
        android:text="@string/cast"
        android:textFontWeight="900"
        android:textSize="14sp"
        android:lineHeight="20dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewDevastating"
        android:textColor="@color/devastating">
    </TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_actors"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/textViewCast"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

