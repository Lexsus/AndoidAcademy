<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_film_avatar"
        android:layout_width="166dp"
        android:layout_height="248dp"
        android:layout_marginLeft="0dp"
        android:contentDescription="@string/fragment_actors_avatar_content_description"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_age_rating"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="8dp"
        android:background="@color/holder_movie_background"
        android:text="@string/holder_movie_age_rating"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/tv_tag_movie"
        android:layout_width="146dp"
        android:layout_height="12dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="182dp"
        android:background="@color/holder_movie_background"
        android:text="@string/holder_movie_tag"
        android:textAlignment="textStart"
        android:textColor="@color/tagColor"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_age_rating"/>

    <TextView
        android:id="@+id/tv_film_name"
        android:layout_width="154dp"
        android:layout_height="20dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="224dp"
        android:background="@color/holder_movie_background"
        android:text="@string/holder_movie_name"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textFontWeight="900"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_age_rating"/>

</androidx.constraintlayout.widget.ConstraintLayout>